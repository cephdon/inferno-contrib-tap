MODDIR=$ROOT/module
SYS_MODULE=${SYSMODULES:%=$MODDIR/%}
LIMBOFLAGS=-I$MODDIR

all:V:		$TARG $TESTS

install:V:	all

clean:V:
	rm -f *.dis *.sbl

nuke:V:		clean

test:V:		${TESTS:%=%.test-$OSTARG}

%.dis.test-Inferno:V:	all
	$stem.dis

%.dis.test-os:V:	all %.t
	./$stem.t

%.t:
	ln -nsf runtest.sh $stem.t

%.dis:		$MODULES $SYS_MODULE

%.dis:		%.b
	limbo $LIMBOFLAGS -gw $stem.b

%.s:		%.b
	limbo $LIMBOFLAGS -w -G -S $stem.b

